{
  "name": "docs-design-system",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "npm run dev --workspace=packages/ui & npm run dev --workspace=website & npm run storybook",
    "build": "npm run build --workspace=packages/ui && npm run build --workspace=website && npm run build-storybook",
    "lint": "npm run lint --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "storybook": "npm run storybook --workspace=storybook",
    "build-storybook": "npm run build --workspace=storybook"
  },
  "workspaces": [
    "website",
    "packages/*",
    "storybook"
  ],
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "16.1.1",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  }
}
