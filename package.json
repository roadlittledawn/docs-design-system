{
  "name": "docs-design-system",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "npm run dev --workspace=app/ui",
    "build": "npm run build --workspace=packages/ui && npm run build --workspace=app/ui",
    "lint": "npm run lint --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present"
  },
  "workspaces": [
    "app/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "16.1.1",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  }
}
